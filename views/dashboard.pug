extends layout

block variables
	- title = 'Dashboard'
	
append styles
	link(rel='stylesheet' href='/stylesheets/clubs.css' type='text/css')

append content
	.row.no-gutters
		.col-lg
			h2 Your Page
			if (!club)
				.clubcontainer
					p You have not created a page for your club yet.
					a(href='dashboard/edit')
						button.bigbutton Create page
				
			else
				- var clubobj = JSON.parse(club);
				.text-center
					a(href='dashboard/edit')
						button.bigbutton.leftbutton Edit
					a(href='../clubs/' + clubobj.username)
						button.bigbutton View
				.clubcontainer
					h1= clubobj.name
					p.gray.shrink= clubobj.username
					p.gray.shrink= 'Tags: ' + clubobj.tags.replace(/,/g, ', ')
					p.gray.shrink= 'Officers: ' + clubobj.officers.replace(/,/g, ', ')
					p.gray.shrink= 'Meeting dates: ' + clubobj.meetingdates
					hr
					.quillcontent !{clubobj.description}
		.col-lg
			h2 Engagement
			if (!club)
				.clubcontainer
					p Once you create a club, you will be able to see its engagement statistics here
			else
				.text-center
						a(href='dashboard/engagement')
							button.bigbutton See More
				.clubcontainer
					p Engagement statistics:
	if (club)
		hr
		.balance
			h2= 'Your Balance: $' + clubobj.balance
			p.text-center Each month, you will receive money based on how many people view your page. You can send that money to a PayPal account here.