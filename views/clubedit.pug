extends layout

block variables
	- title = 'Edit Your Page';
	
append styles
	link(href="https://cdn.quilljs.com/1.3.6/quill.snow.css", rel="stylesheet")
	link(href='/stylesheets/clubedit.css', rel='stylesheet')
	
append content
	form#editform(action='publish', method='post')
		label(for='clubname') Club Name
		br
		input.textinput#clubname(type='text' name='clubname')
		#editor.textinput
			p Default text
		.buttoncontainer
			button#cancel.bigbutton Cancel
			button#publishclub.bigbutton(type='submit') Publish Changes
			//TODO (long term): Offer a "preview changes" option before publishing changes
		input#dummydescription(type='hidden' name='description')
			
	
append scripts
	script(src="https://cdn.quilljs.com/1.3.6/quill.js")
	script(src='/javascripts/clubedit.js')